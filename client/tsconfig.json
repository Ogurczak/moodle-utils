{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": ".",
    "baseUrl": "./src",
    "paths": {
      "app/*": [
        "./src/*"
      ]
    },
    "strict": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2020"
    ],
    "removeComments": true
  }
}